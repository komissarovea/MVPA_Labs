<UserControl x:Class="Lab5.HippodromeLib.HippodromeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root">
    <Grid>
        <Ellipse x:Name="pathEllipse" Margin="0" Width="430" Height="430" VerticalAlignment="Center" HorizontalAlignment="Center"
                 StrokeThickness="30" Stroke="Orange" Visibility="Visible" Opacity="0.5"/>
        <Canvas x:Name="canvas" Opacity="0.5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Height="400">
            <Ellipse x:Name="horseEllipse" Width="15" Height="15" Fill="Red" Visibility="Collapsed"
                     MouseLeftButtonDown="horseEllipse_MouseLeftButtonDown" MouseRightButtonDown="horseEllipse_MouseRightButtonDown"/>
        </Canvas>
    </Grid>
</UserControl>
